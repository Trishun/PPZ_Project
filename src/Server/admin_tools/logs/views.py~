# -*- coding: utf-8 -*-
from __future__ import unicode_literals
import os
import subprocess

# Create your views here.
from django.http import HttpResponse


from django.shortcuts import render_to_response

def index(request):
    log = read_file()
    return render_to_response('logs/index.html', {'log': log})

def read_file():
    out = ""
#    print (subprocess.check_output("echo $PPZ_HOME"))
    f = open( os.path.join((subprocess.check_output(['echo', '$PPZ_HOME'])), 'log.txt'))
    return list(f)
