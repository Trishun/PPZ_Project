<?xml version="1.0" encoding="UTF-8"?>
<project name="module_ppz_project" default="compile.module.ppz_project">
  <dirname property="module.ppz_project.basedir" file="${ant.file.module_ppz_project}"/>
  
  <property name="module.jdk.home.ppz_project" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.ppz_project" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.ppz_project" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.ppz_project" value="-encoding UTF-8 -source 8 -target 1.8 ${compiler.args}"/>
  
  <property name="ppz_project.output.dir" value="${module.ppz_project.basedir}/out/production/PPZ_Project"/>
  <property name="ppz_project.testoutput.dir" value="${module.ppz_project.basedir}/out/test/PPZ_Project"/>
  
  <path id="ppz_project.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="ppz_project.module.production.classpath">
    <path refid="${module.jdk.classpath.ppz_project}"/>
  </path>
  
  <path id="ppz_project.runtime.production.module.classpath">
    <pathelement location="${ppz_project.output.dir}"/>
  </path>
  
  <path id="ppz_project.module.classpath">
    <path refid="${module.jdk.classpath.ppz_project}"/>
    <pathelement location="${ppz_project.output.dir}"/>
  </path>
  
  <path id="ppz_project.runtime.module.classpath">
    <pathelement location="${ppz_project.testoutput.dir}"/>
    <pathelement location="${ppz_project.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.ppz_project">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.ppz_project">
    <patternset refid="excluded.from.module.ppz_project"/>
  </patternset>
  
  <path id="ppz_project.module.sourcepath">
    <dirset dir="${module.ppz_project.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.ppz_project" depends="compile.module.ppz_project.production,compile.module.ppz_project.tests" description="Compile module PPZ_Project"/>
  
  <target name="compile.module.ppz_project.production" depends="register.custom.compilers" description="Compile module PPZ_Project; production classes">
    <mkdir dir="${ppz_project.output.dir}"/>
    <javac2 destdir="${ppz_project.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.ppz_project}/javac">
      <compilerarg line="${compiler.args.ppz_project}"/>
      <bootclasspath refid="ppz_project.module.bootclasspath"/>
      <classpath refid="ppz_project.module.production.classpath"/>
      <src refid="ppz_project.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.ppz_project"/>
    </javac2>
    
    <copy todir="${ppz_project.output.dir}">
      <fileset dir="${module.ppz_project.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.ppz_project.tests" depends="register.custom.compilers,compile.module.ppz_project.production" description="compile module PPZ_Project; test classes" unless="skip.tests"/>
  
  <target name="clean.module.ppz_project" description="cleanup module">
    <delete dir="${ppz_project.output.dir}"/>
    <delete dir="${ppz_project.testoutput.dir}"/>
  </target>
</project>